---
import ResultCard from "./ui/resultCard.astro";
import Logo from "@assets/sales.png";

const jobResults = [
  {
    logoSrc: "CompanyLogo",
    title: "Software Engineer",
    companyName: "Tech Co.",
    postingDate: "October 1, 2023",
    location: "San Francisco, CA",
    typeLevel: "Full-time â€¢ Senior",
    applyLink: "https://example.com/job1",
  },
];
---

<!-- Render the job results using the JobResultCard component -->
<div class="grid md:grid-cols-2 gap-4">
  <!-- Map over the jobResults array and render the cards -->
  {
    jobResults.map((job, index) => (
      <>
        <ResultCard
          logoSrc={Logo.src}
          title={job.title}
          companyName={job.companyName}
          postingDate={job.postingDate}
          location={job.location}
          typeLevel={job.typeLevel}
          key={index}
        />
        <ResultCard
          logoSrc={Logo.src}
          title={job.title}
          companyName={job.companyName}
          postingDate={job.postingDate}
          location={job.location}
          typeLevel={job.typeLevel}
          key={index}
        />
      </>
      <ResultCard
          logoSrc={Logo.src}
          title={job.title}
          companyName={job.companyName}
          postingDate={job.postingDate}
          location={job.location}
          typeLevel={job.typeLevel}
          key={index}
        />
