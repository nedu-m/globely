---
import { Icon } from "astro-icon";

interface Props {
  imageSrc: string;
  altText: string;
  title: string;
  company: string;
  location: string;
  applyLink: string;
  salary: string;
  jobType: string;
  key: any;
}

const {
  imageSrc,
  altText,
  title,
  company,
  location,
  applyLink,
  salary,
  jobType,
}: Props = Astro.props;

const sizes = {
  lg: "w-full h-32 object-cover rounded-t-lg",
};

const cardStyles = {
  card: "relative bg-white rounded-lg group overflow-hidden antialiased",
  text: "col-span-2 text-lg font-semibold text-gray-800 mb-2",
  company: "text-sm text-gray-700",
  location: "text-sm text-gray-700",
  applyButtonContainer:
    "absolute inset-0 flex items-center justify-center opacity-0 bg-black bg-opacity-50 transition-opacity group-hover:opacity-100",
  applyButton:
    "text-white font-medium hover:underline text-sm flex items-center",
};
---

<div class={cardStyles.card}>
  <img src={imageSrc} alt={altText} class={sizes.lg} />
  <div class="p-4 grid grid-cols-2 gap-2">
    <h3 class={cardStyles.text}>{title}</h3>
    <p class={cardStyles.company}>üè¢{company}</p>
    <p class={cardStyles.location}>üí∞{salary}</p>
    <p class={cardStyles.location}>üìç{location}</p>
    <p class={cardStyles.location}>‚è≥{jobType}</p>
  </div>
  <!-- Apply Button -->
  <div class={cardStyles.applyButtonContainer}>
    <a href={applyLink} class={cardStyles.applyButton}>
      View Job <Icon name="lucide:arrow-up-right" class="w-5 h-5 mr-2" />
    </a>
  </div>
</div>
